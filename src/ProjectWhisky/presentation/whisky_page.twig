    {% extends "default_template.twig" %}
        {% block title %}
            {{ whisky.name }}
        {% endblock %}

        {% block content %}
            <header id="header_banner" class="vert_half">
                <div id="header_quote"><p>IceTea On The Rocks</p></div>
            </header>
            <div id="whisky_page">
                <div id="content_container" class="clearfix flex_parent">
                    <aside id="whisky_sidebar" class="left">
                        <div class="whisky_image_container center">
                            <img src="src/ProjectWhisky/presentation/img/{{ whisky.imagePath }}" alt="{{ whisky.name }} Image">
                        </div>
                        <div id="information">
                            {{whisky.distilleryName}}
                            {{whisky.distilleryId}}
                            <div>
                                <h3>Distillery:</h3>
                                <p>{{ distillery.name }}</p>
                            </div>
                            <div>
                                <h3>Ouderdom:</h3>
                                <p>{{ distillery.age }}</p>
                            </div>
                            <div>
                                <h3>Alcohol Percentage:</h3>
                                <p>{{ distillery.alcohol }}</p>
                            </div>
                            <div>
                                <h3>Barrel type:</h3>
                                <p>{{ barrel.type }}</p>
                            </div>
                            <div>
                                <h3>Region:</h3>
                                <p>{{ whisky.region }}</p>
                            </div>
                            <div>
                                <h3>Estimated Price:</h3>
                                <p>{{ whisky.price }}</p>
                            </div>
                        </div>
                    </aside>
                    {% set ratingtotal = (whisky.ratingAroma + whisky.ratingColor + whisky.ratingTaste + whisky.ratingAftertaste) * 0.125 %}
                    <div id="whisky_total" class="progress-radial progress-{{ (ratingtotal * 10) | round }}"> 
                        <div class="overlay">{{ ratingtotal }}</div>
                    </div>
                    <div class="rating_box">
                        <h2>{{ whisky.name }}</h2>
                        <div id="bars">
                            <!--bar-->
                            <div class="clearfix">
                                <span class="left">Aroma</span>
                                <span class="right">{{ whisky.ratingAroma * 0.5 }}</span>
                            </div>
                            <div class="rating_base"></div>
                            <div class="rating" style="width: {{ whisky.ratingAroma * 5 }}%;"></div>

                            <!--bar-->
                            <div class="clearfix">
                                <span class="left">Taste</span>
                                <span class="right">{{ whisky.ratingTaste * 0.5 }}</span>
                            </div>
                            <div class="rating_base"></div>
                            <div class="rating" style="width: {{ whisky.ratingTaste * 5 }}%;"></div>

                            <!--bar-->
                            <div class="clearfix">
                                <span class="left">Aftertaste</span>
                                <span class="right">{{ whisky.ratingAftertaste * 0.5 }}</span>
                            </div>
                            <div class="rating_base"></div>
                            <div class="rating" style="width: {{ whisky.ratingAftertaste * 5 }}%;"></div>

                            <!--bar-->
                            <div class="clearfix">
                                <span class="left">Color</span>
                                <span class="right">{{ whisky.ratingColor * 0.5 }}</span>
                            </div>
                            <div class="rating_base"></div>
                            <div class="rating" style="width: {{ whisky.ratingColor * 5 }}%;"></div>
                        </div>
                    </div>
                    <div id="contentbox">
                        <div id="review">
                            <h2 id="description_header">Detailed description:</h2>
                            <div class="review_box">
                                <h3>Aroma</h3>
                                <p>{{ whisky.textAroma }}</p>
                            </div>
                            <div class="review_box">
                                <h3>Taste</h3>
                                <p>{{ whisky.textTaste }}</p>
                            </div>
                            <div class="review_box">
                                <h3>Aftertaste</h3>
                                <p>{{ whisky.textAftertaste }}</p>
                            </div>
                            <div class="review_box">
                                <h3>Color</h3>
                                <p>{{ whisky.textColor }}</p>
                            </div>
                            <h2 id="review_header">Review:</h2>
                            <div class="review_box">
                                <p>{{ whisky.review }}</p>
                            </div>
                        </div>
                        <div id="comments">
                        {% for comment in comments %}
                        <br>
                        
                        {{comment.username}}
                        <br>
                        {{comment.comment}}
                        <br>
                        {{comment.commentTime}}
                        {{comment.commentDate}}
                        <br>
                        {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}