{% extends "cpanel_template.twig" %}
{% set activetab = 'distilleries' %}
{% block title %} Add Distillery  {% endblock %}
{% block content %}

            <header id="header_banner" class="barrels_header">
                <div id="header_quote"><p>Add Distillery</p></div>
            </header>
            <div id="content_container">
                <form action="cp_distillery_add.php" method="post">
                   
                    <label for="type">Name: </label>
                    <input type="text" id="type" name="name" value="{{ formData.name }}" /><br>
                    <label for="">Address: </label>
                    <input type="text" id="address" name="address" value="{{ formData.address }}" /></br>
                    <label for="">City: </label>
                    <input type="text" id="city" name="city" value="{{ formData.city }}" /></br>
                    <label for="">Country: </label>
                    <input type="text" id="country" name="country" value="{{ formData.country }}" /></br>
                    <label for="">Region: </label>
                    <input type="text" id="region" name="region" value="{{ formData.region }}" /></br>
                    <input type="submit" value="Add distillery">
                </form>
            </div>
{% endblock %}