                    <input type="password" class="register_password" name="password" placeholder="Password">
                    <input type="password" class="register_password_rt" name="rpassword" placeholder="Repeat password">
                    <input class="sbmt-btn" name="registrationBtn" type="submit" value="Register">
                </form>
                <div class="error_reporting_registration">
                    <span>Verkeerde registratie</span>
                </div>
                <div class="close-register">
                    <a class="show-login register_from_login" href="#">Log in</a>
