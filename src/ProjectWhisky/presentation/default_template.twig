            <div class="lightbox-panel-login">
                <h3>Log in</h3>
                <form name="loginfomr" id="login_form" action="authorization.php" method="post">
                    <input class="login_login" type="text" name="emailField" placeholder="Login">
                    <input class="login_pass" name="passField" type="password" placeholder="Password">
                    <input class="sbmt-btn" name="loginBtn" type="submit" value="Log in">
                </form>
                <div class="error_reporting"></div>

                <div class="close-login">
                    <a class="show-register register_from_login" href="#">Register</a>
