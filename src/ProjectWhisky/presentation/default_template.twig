            {#Registration pop-up#}
            <div class="lightbox-panel-register">
                <h3>Register</h3>
                <form name="register_form" id="register_form" method="post" action="registration.php">
                    <input type="text" class="register_name" name="firstname" placeholder="Firstname">
                    <input type="text" class="register_name" name="lastname" placeholder="Lastname">
                    <input type="text" class="register_email" name="email" placeholder="E-mail">
