        <div class="lightbox-panel-register">
            <div class="modal">
                <form name="register_form" id="register_form" method="post" action="registration.php">
                <h3>Register</h3>
                    <input type="text" name="firstname" placeholder="Firstname" spellcheck="false" required>
                    <input type="text" name="lastname" placeholder="Lastname" spellcheck="false" required>
