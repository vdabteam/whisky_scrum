{% extends "cpanel_template.twig" %}
{% set activetab = 'users' %}
{% block title %} Users  {% endblock %}
{% block content %}

            <header id="header_banner" class="users_header">
                <div id="header_quote"><p>Users</p></div>
            </header>
            <div id="content_container">
                <form class="cpanel_form"><h2>Search Users</h2>

                    <input type="text" name="search_username" id="search_username" placeholder="Username">
                    <input type="text" name="search_email" id="search_email" placeholder="Email">
                    <input class="btn btn-primary" type="submit" value="Search">

                </form>
                <table class="cpanel_table">

                    <tr>
                        <th>Avatar</th>
                        <th>Username</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Email</th>
                        <th>Brent</th>
                        <th>Role</th>
                        <th>Full Edit</th>
                    </tr>
                {% for user in users %}
                    <tr>
                        <td class="text_center"><img alt="profile picture of {{ user.username }}" src="src/ProjectWhisky/presentation/userimages/{{ user.imagePath }}"></td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.email }}</td>

                        {% if user.blocked == 1 %}
                            <td class="red no_border">true
                        {% else %}
                            <td class="">false
                        {% endif %}</td>

                        {% if user.admin == 1 %}
                            <td class="text_center green no_border">Admin
                        {% else %}
                            <td class="text_center">User
                        {% endif %}</td>

                        <td class="text_center"><a href="CP_user_edit.php?id={{ user.id }}">Edit</a></td>
                    </tr>
                {% endfor  %}

                </table>
                
                <br>
                <a href="cp_user_add.php">Add new user</a>
                
                
            </div>
{% endblock %} 