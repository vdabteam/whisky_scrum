{% extends "cpanel_template.twig" %}
{% set activetab = 'distilleries' %}
{% block title %} cp distilleries  {% endblock %}
{% block content %}

            <header id="header_banner" class="distillery_header">
                <div id="header_quote"><p>Distilleries</p></div>
            </header>
            <div id="content_container">
                <div id="controller" class="shadow">
                    <form class="center cpanel_form"><h2>Search Distillery</h2>

                        <input type="text" name="search_distilleryname" id="search_distilleryname" placeholder="Distillery Name">
                        <input type="text" name="search_distilleryregion" id="search_distilleryregion" placeholder="Region">
                        <input class="btn btn-primary" type="submit" value="Search">

                    </form>
                    <a class="btn btn-primary" href="CP_distillery_add.php"><i class="fa fa-plus"></i> Add new distillery</a>
                    {% for distillery in distilleries %}
                        {{ distillery.name }}&nbsp;<a href="CP_distillery_edit.php?id={{ distillery.id }}">Edit</a><br>
                    {% endfor %}
                    
                </div>
            </div>
{% endblock %}    
