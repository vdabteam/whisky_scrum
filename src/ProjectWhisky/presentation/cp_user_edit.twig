{% extends "cpanel_template.twig" %}
{% set activetab = 'users' %}
{% block title %} users  {% endblock %}
{% block content %}

<header id="header_banner" class="users_header">
	<div id="header_quote"><p>Edit user</p></div>
</header>

<div id="content_container">
    <div id="controller" class="shadow">

        {% if userdata.imagePath != "default.jpg" %}

            <form id="profile_fileRemover_form" action="cp_user_edit.php?id={{ userdata.id }}" method="post">
            <h3>Profile Picture:</h3>
                <div class="fileRemover btn btn-primary">
                    <span class="fa fa-times"></span> <span> Remove Picture</span>
                    <input type="submit" name="removeProfileImageBtn" id="imgRemover" class="remover" value="Remove Picture"/>
                </div>
            </form>

        {% endif %}

    	<form action="cp_user_edit.php?id={{ userdata.id }}" method="post">
    	
    		<img src="src/ProjectWhisky/presentation/userimages/{{ userdata.imagePath }}" alt="Profile Picture"/>
    		<h3>Username:</h3>
            <input type="text" value="{{ userdata.username }}" name="userUsername" placeholder="Username"/>
            <h3>Password:</h3>
            <input type="password" value="" name="userPassword" placeholder="Password"/>
    		<h3>Firstname:</h3>
            <input type="text" value="{{ userdata.firstname }}" name="userFirstName" placeholder="Firstname"/>
            <h3>Lastname:</h3>
            <input type="text" value="{{ userdata.lastname }}" name="userLastName" placeholder="Lastname"/>
            <h3>E-mail:</h3>
            <input type="text" value="{{ userdata.email }}" name="userEmail" placeholder="E-mail"/>

            <div class="">
    	        Admin: <input type="checkbox" {{userdata.admin == 1 ? 'checked' : '' }} name="userAdmin">
    	        Blocked: <input type="checkbox" {{userdata.blocked == 1 ? 'checked' : '' }}  name="userBlocked">
    		</div>
    		<input class="btn btn-primary" type="submit" value="Save Changes"/>
    	</form>
        
    </div>
</div>
{% endblock %} 