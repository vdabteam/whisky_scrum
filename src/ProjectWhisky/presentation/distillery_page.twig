    {% extends "default_template.twig" %}
        {% block title %}
            {{ distillery.name }}
        {% endblock %}

        {% block content %}
            <header id="header_banner" class="distillery_header">
                <div id="header_quote"><p>Distillery Page</p></div>
            </header>
            <div id="distillery_page">
                <div id="content_container" class="clearfix flex_parent">
                    <aside id="whisky_sidebar" class="left">
                        
                        <div id="information">
                            <div>
                                <h3>Address</h3>
                                <p>{{ distillery.address }}</p>
                            </div>
                            <div>
                                <h3>City</h3>
                                <p>{{ distillery.city }}</p>
                            </div>
                            <div>
                                <h3>Country</h3>
                                <p>{{ distillery.country }}</p>
                            </div>
                        </div>

                    </aside>
                    <div id="contentbox">

                        <iframe width='100%' height='100%' frameborder='0' scrolling='no' src='https://maps.google.com/maps?&amp;q="+ {{ distillery.name}} +"+Distillery&amp;output=embed'></iframe>
                        
                        <h2>{{ distillery.name }}</h2>
                    </div>
                </div>
            </div>
        {% endblock %}